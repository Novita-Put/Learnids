<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.learnids">

    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Learnids"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity
            android:name=".HelpActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".SettingActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".BangunActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".TransportasiActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".HewanActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".WarnaActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".AngkaActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".AlphabetActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>